                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="Network Access:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding NetworkAccess}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Connection Type:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding ConnectionProfiles}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Accelerometer Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsAccelerometerAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ“ Accelerometer"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsAccelerometerAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsAccelerometerMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleAccelerometerCommand}"
                                                  IsVisible="{Binding IsAccelerometerAvailable}"
                                                  BackgroundColor="{Binding IsAccelerometerMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="X-Axis:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding AccelerometerX}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Y-Axis:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding AccelerometerY}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Z-Axis:"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding AccelerometerZ}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Gyroscope Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsGyroscopeAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ”„ Gyroscope"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsGyroscopeAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsGyroscopeMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleGyroscopeCommand}"
                                                  IsVisible="{Binding IsGyroscopeAvailable}"
                                                  BackgroundColor="{Binding IsGyroscopeMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="X-Axis (rad/s):"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding GyroscopeX}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Y-Axis (rad/s):"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding GyroscopeY}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Z-Axis (rad/s):"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding GyroscopeZ}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Magnetometer Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsMagnetometerAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ§² Magnetometer"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsMagnetometerAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsMagnetometerMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleMagnetometerCommand}"
                                                  IsVisible="{Binding IsMagnetometerAvailable}"
                                                  BackgroundColor="{Binding IsMagnetometerMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="X-Axis (ÂµT):"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding MagnetometerX}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Y-Axis (ÂµT):"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding MagnetometerY}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Z-Axis (ÂµT):"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding MagnetometerZ}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Compass Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsCompassAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ§­ Compass"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsCompassAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsCompassMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleCompassCommand}"
                                                  IsVisible="{Binding IsCompassAvailable}"
                                                  BackgroundColor="{Binding IsCompassMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto"
                                         RowSpacing="8">
                                          <Label Text="Heading (Magnetic North):"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding CompassHeading}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Barometer Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsBarometerAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸŒ¡ï¸ Barometer"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsBarometerAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsBarometerMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleBarometerCommand}"
                                                  IsVisible="{Binding IsBarometerAvailable}"
                                                  BackgroundColor="{Binding IsBarometerMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto"
                                         RowSpacing="8">
                                          <Label Text="Atmospheric Pressure:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Pressure}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Orientation Sensor Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsOrientationSensorAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ“± Orientation Sensor"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsOrientationSensorAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsOrientationSensorMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleOrientationSensorCommand}"
                                                  IsVisible="{Binding IsOrientationSensorAvailable}"
                                                  BackgroundColor="{Binding IsOrientationSensorMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="W (Quaternion):"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding OrientationW}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="X (Quaternion):"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding OrientationX}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Y (Quaternion):"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding OrientationY}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Z (Quaternion):"
                                                 Grid.Row="3"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding OrientationZ}"
                                                 Grid.Row="3"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Ambient Light Sensor Section (Android Only) -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsLightSensorAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ’¡ Ambient Light (Android Only)"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsLightSensorAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                   </HorizontalStackLayout>

                                   <Button Text="{Binding IsLightSensorMonitoring, Converter={StaticResource BoolToTextConverter}}"
                                           Command="{Binding ToggleLightSensorCommand}"
                                           Background="{Binding IsLightSensorMonitoring, Converter={StaticResource BoolToColorConverter}}"
                                           TextColor="{toolkit:AppThemeResource OnPrimary}"
                                           IsVisible="{Binding IsLightSensorAvailable}"/>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="Light Level:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding LightLevel}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"
                                                 FontFamily="Courier"/>

                                          <Label Text="Description:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding LightDescription}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Health Data Section (iOS Only) -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16"
                             Opacity="{Binding IsHealthAvailable, Converter={StaticResource BoolToOpacityConverter}}">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="â¤ï¸ Health Data (iOS Only)"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Label Text="(Unavailable)"
                                                 IsVisible="{Binding IsHealthAvailable, Converter={StaticResource InvertedBoolConverter}}"
                                                 TextColor="{toolkit:AppThemeResource Error}"
                                                 VerticalOptions="Center"/>
                                   </HorizontalStackLayout>

                                   <!-- Authorization Button -->
                                   <Button Text="Grant Health Permission"
                                           Command="{Binding RequestHealthPermissionCommand}"
                                           Background="{toolkit:AppThemeResource Primary}"
                                           TextColor="{toolkit:AppThemeResource OnPrimary}"
                                           IsVisible="{Binding IsHealthAvailable}">
                                          <Button.Triggers>
                                                 <DataTrigger TargetType="Button"
                                                              Binding="{Binding IsHealthAuthorized}"
                                                              Value="True">
                                                        <Setter Property="IsVisible"
                                                                      Value="False"/>
                                                 </DataTrigger>
                                          </Button.Triggers>
                                   </Button>

                                   <!-- Heart Rate Section -->
                                   <VerticalStackLayout Spacing="8"
                                                        IsVisible="{Binding IsHealthAuthorized}">
                                          <Label Text="Heart Rate Monitor"
                                                 FontAttributes="Bold"
                                                 FontSize="16"/>

                                          <Button Text="{Binding IsHeartRateMonitoring, Converter={StaticResource BoolToTextConverter}}"
                                                  Command="{Binding ToggleHeartRateMonitoringCommand}"
                                                  Background="{Binding IsHeartRateMonitoring, Converter={StaticResource BoolToColorConverter}}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"/>

                                          <Grid ColumnDefinitions="*, Auto"
                                                RowDefinitions="Auto, Auto"
                                                RowSpacing="8">
                                                 <Label Text="Heart Rate:"
                                                        Grid.Row="0"
                                                        Grid.Column="0"/>
                                                 <Label Text="{Binding HeartRate}"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontAttributes="Bold"
                                                        FontFamily="Courier"
                                                        FontSize="18"
                                                        TextColor="{toolkit:AppThemeResource Error}"/>

                                                 <Label Text="Status:"
                                                        Grid.Row="1"
                                                        Grid.Column="0"/>
                                                 <Label Text="{Binding HeartRateStatus}"
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        FontAttributes="Bold"/>
                                          </Grid>
                                   </VerticalStackLayout>

                                   <!-- Step Count Section -->
                                   <VerticalStackLayout Spacing="8"
                                                        IsVisible="{Binding IsHealthAuthorized}">
                                          <HorizontalStackLayout Spacing="12">
                                                 <Label Text="Today's Steps"
                                                        FontAttributes="Bold"
                                                        FontSize="16"
                                                        VerticalOptions="Center"/>
