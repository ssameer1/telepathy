                     <!-- Device Information Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16">
                            <VerticalStackLayout Spacing="12">
                                   <Label Text="ðŸ“± Device Information"
                                          FontAttributes="Bold"
                                          FontSize="20"/>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="Model:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding DeviceModel}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Manufacturer:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Manufacturer}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Device Name:"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding DeviceName}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Platform:"
                                                 Grid.Row="3"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Platform}"
                                                 Grid.Row="3"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="OS Version:"
                                                 Grid.Row="4"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding OsVersion}"
                                                 Grid.Row="4"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Device Idiom:"
                                                 Grid.Row="5"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding DeviceIdiom}"
                                                 Grid.Row="5"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Device Type:"
                                                 Grid.Row="6"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding DeviceType}"
                                                 Grid.Row="6"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

