                                          FontSize="20"/>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="Screen Width:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding ScreenWidth}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Screen Height:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding ScreenHeight}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Density:"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Density}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Orientation:"
                                                 Grid.Row="3"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Orientation}"
                                                 Grid.Row="3"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Rotation:"
                                                 Grid.Row="4"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding Rotation}"
                                                 Grid.Row="4"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Refresh Rate:"
                                                 Grid.Row="5"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding RefreshRate}"
                                                 Grid.Row="5"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Battery Status Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸ”‹ Battery Status"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsBatteryMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleBatteryMonitoringCommand}"
                                                  BackgroundColor="{Binding IsBatteryMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
                                                  TextColor="{toolkit:AppThemeResource OnPrimary}"
                                                  Padding="12,6"
                                                  FontSize="12"/>
                                   </HorizontalStackLayout>

                                   <Grid ColumnDefinitions="*, Auto"
                                         RowDefinitions="Auto, Auto, Auto, Auto"
                                         RowSpacing="8">
                                          <Label Text="Battery Level:"
                                                 Grid.Row="0"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding BatteryLevel}"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="State:"
                                                 Grid.Row="1"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding BatteryState}"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Power Source:"
                                                 Grid.Row="2"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding PowerSource}"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>

                                          <Label Text="Energy Saver:"
                                                 Grid.Row="3"
                                                 Grid.Column="0"/>
                                          <Label Text="{Binding EnergySaverStatus}"
                                                 Grid.Row="3"
                                                 Grid.Column="1"
                                                 FontAttributes="Bold"/>
                                   </Grid>
                            </VerticalStackLayout>
                     </Border>

                     <!-- Connectivity Section -->
                     <Border StrokeThickness="1"
                             Stroke="{toolkit:AppThemeResource Surface1}"
                             StrokeShape="RoundRectangle 12"
                             BackgroundColor="{toolkit:AppThemeResource Surface0}"
                             Padding="16">
                            <VerticalStackLayout Spacing="12">
                                   <HorizontalStackLayout Spacing="12">
                                          <Label Text="ðŸŒ Connectivity"
                                                 FontAttributes="Bold"
                                                 FontSize="20"
                                                 VerticalOptions="Center"/>
                                          <Button Text="{Binding IsConnectivityMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop|Start'}"
                                                  Command="{Binding ToggleConnectivityMonitoringCommand}"
                                                  BackgroundColor="{Binding IsConnectivityMonitoring, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Error|Primary'}"
