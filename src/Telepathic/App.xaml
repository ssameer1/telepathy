<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Telepathic"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:Telepathic.Converters"
             x:Class="Telepathic.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.taskomatic.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters for our cosmic mission! -->
            <converters:CombinedTasksConverter x:Key="CombinedTasksConverter"/>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <toolkit:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
            <toolkit:BoolToObjectConverter x:Key="BoolToThicknessConverter"
                    TrueObject="2"
                    FalseObject="0"/>
            <toolkit:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <toolkit:IsEqualConverter x:Key="IsEqualConverter"/>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
